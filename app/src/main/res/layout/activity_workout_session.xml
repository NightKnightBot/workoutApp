<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutSession">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".WorkoutSession">


        <TextView
            android:id="@+id/nameOfSched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Schedule"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/background"
            android:textSize="32sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:hint="Number of Reps"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="1"
                android:inputType="number"
                android:id="@+id/repNumber">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <ListView
            android:id="@+id/workoutList"
            android:layout_width="match_parent"
            android:layout_height="497dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/backgroundAlt"
            android:textColor="@color/white"
            android:text="Reps Completed: 0"
            android:textSize="24sp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:id="@+id/confirmCompletionem"/>
    </LinearLayout>
</ScrollView>