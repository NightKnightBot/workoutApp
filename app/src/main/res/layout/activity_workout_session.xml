<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutSession">

    <LinearLayout
        android:id="@+id/ws"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkoutSession">

        <TextView
            android:id="@+id/nameOfSched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textAlignment="center"
            android:textSize="32sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="24dp"
            android:hint="Number of Reps"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:inputType="number"
                android:id="@+id/repNumber">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="487dp">

            <ListView
                android:id="@+id/workoutList"
                android:layout_width="match_parent"
                android:layout_height="490dp"></ListView>
        </ScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reps Completed: 0"
            android:layout_gravity="center"
            android:id="@+id/confirmCompletionem">

        </Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>